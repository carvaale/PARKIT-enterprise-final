<!--Created by Ruiyan Shi, to let the user login-->
<!--recieve the username and password, and pass the model to the controller to verify it-->
@model PARKIT_enterprise_final.Models.User

@{
    ViewData["Title"] = "Login";
}


<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Login</h2>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-body p-4">
        <form asp-action="Login">
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!--only print the error when there is any-->
                        @if(ViewBag.Error != null)
                        {
                            <ul>
                                <li class="text-danger">
                                    @ViewBag.Error
                                </li>
                            </ul> 
                        }
                        <!--fields for username and password-->
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Username" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Username" class="form-control border-0 shadow mt-3" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Password" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Password" class="form-control border-0 shadow mt-3" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <!--two button, one to login, one to navigate user to register-->
                        <div class="form-group mt-3">
                            <input type="submit" value="Login" class="btn btn-primary" />
                            <div class="text-black-50 m-3">
                                Don't have account yet? <a asp-action="CreateUser" class="text-black text-decoration-underline">Register</a> here
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
