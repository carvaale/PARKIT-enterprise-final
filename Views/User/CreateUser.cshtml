<!--Created by Ruiyan Shi, to create user, let a user to register-->
@model PARKIT_enterprise_final.Models.User
@{
    ViewData["Title"] = "Register";
}
<!--Title-->
<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary m-lg-0 py-3 rounded-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Register</h2>
            </div>
        </div>
    </div>
    <hr />
    <div class="card-body p-4">
        <form asp-action="CreateUser">
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <!--display the error message if any-->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!--only render when there is error message-->
                        @if (ViewBag.Error != null)
                        {
                            <ul>
                                <li class="text-danger">
                                    @ViewBag.Error
                                </li>
                            </ul>
                        }
                        <!--all input fields that asks user to register-->
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Username" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Username" class="form-control border-0 shadow mt-3" placeholder="UserName"/>
                            <span asp-validation-for="Username" class="text-danger mt-2 text-opacity-75"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Password" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Password" class="form-control border-0 shadow mt-3" />
                            <span asp-validation-for="Password" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="FirstName" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="FirstName" class="form-control border-0 shadow mt-3" placeholder="First Name"/>
                            <span asp-validation-for="FirstName" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="LastName" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="LastName" class="form-control border-0 shadow mt-3" placeholder="Last Name"/>
                            <span asp-validation-for="LastName" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Email" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Email" class="form-control border-0 shadow mt-3" placeholder="aaa@aaa.com"/>
                            <span asp-validation-for="Email" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Phone" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Phone" class="form-control border-0 shadow mt-3" placeholder="+19058459430"/>
                            <span asp-validation-for="Phone" class="text-danger text-opacity-75"></span>
                        </div>

                        <!--input fields for address-->
                        <div class="form-group form-floating py-2 col-12">
                            <label asp-for="Address.StreetAddress" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Address.StreetAddress" class="form-control border-0 shadow mt-3" placeholder="1430 Trafalgar Road" />
                            <span asp-validation-for="Address.StreetAddress" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-group form-floating py-2 col-12">
                            <label asp-for="Address.City" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Address.City" class="form-control border-0 shadow mt-3" placeholder="Oakville">
                            <span asp-validation-for="Address.City" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-group form-floating py-2 col-12">
                            <label asp-for="Address.ZipCode" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Address.ZipCode" class="form-control border-0 shadow mt-3" placeholder="L6H 2L1"/>
                            <span asp-validation-for="Address.ZipCode" class="text-danger text-opacity-75"></span>
                        </div>

                        <!--input fields for wallet-->
                        <div class="form-group form-floating py-2 col-12">
                            <label asp-for="Wallet.CardNumber" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Wallet.CardNumber" class="form-control border-0 shadow mt-3" placeholder="111111111111111"/>
                            <span asp-validation-for="Wallet.CardNumber" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-group form-floating py-2 col-12">
                            <label asp-for="Wallet.CardHolderName" class="control-label ms-2 text-black-50"></label>
                            <input asp-for="Wallet.CardHolderName" class="form-control border-0 shadow mt-3" placeholder="SheridanCollege"/>
                            <span asp-validation-for="Wallet.CardHolderName" class="text-danger text-opacity-75"></span>
                        </div>
                        <div class="form-group mt-3">
                            <!--one button to submit the register form, another link to navigate to login page-->
                            <input type="submit" value="Register" class="btn btn-primary" />
                            <div class="text-black-50 m-3">
                                Already have account? <a asp-action="Login" class="text-black text-decoration-underline">Login</a> here
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
