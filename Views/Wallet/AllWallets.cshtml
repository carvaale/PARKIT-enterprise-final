<!--Created by Ruiyan Shi, to display all wallets, could be used by administrator-->
@model IEnumerable<PARKIT_enterprise_final.Models.Wallet>

@{
    ViewData["Title"] = "AllWallets";
}

<h1>AllWallets</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardHolderName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardHolderName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WalletId">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
